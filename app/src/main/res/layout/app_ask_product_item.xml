<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sky_color_white"
    android:orientation="vertical"
    android:padding="@dimen/sky_dp_size_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sky_dp_size_3">

        <ImageView
            android:id="@+id/ask_iv_head"
            android:layout_width="@dimen/sky_dp_size_40"
            android:layout_height="@dimen/sky_dp_size_40"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_search" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/ask_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ask_iv_head"
            android:text="用户名"
            android:textColor="@color/aliwx_black"
            android:textSize="15sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/ask_tv_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ask_tv_username"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ask_iv_head"
            android:text="时间"
            android:textColor="@color/aliwx_black"
            android:textSize="15sp" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/adk_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="这是一段很长很长很长很长很长很长很长的评论"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ask_pic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_30"
        android:layout_marginTop="@dimen/sky_dp_size_8"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/sky_dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/ask_tv_comment"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/sky_dp_size_40"
                android:layout_height="@dimen/sky_dp_size_24"
                android:background="@drawable/app_order_selected_shape_selector"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/sky_dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/upAndDown"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/sky_dp_size_40"
                android:layout_height="@dimen/sky_dp_size_24"
                android:background="@drawable/app_order_selected_shape_selector"
                android:gravity="center"
                android:text="点赞"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_14" />
            <TextView
                android:id="@+id/ask_tv_praise"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/sky_dp_size_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/ask_tv_reply"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/sky_dp_size_40"
                android:layout_height="@dimen/sky_dp_size_24"
                android:background="@drawable/app_order_selected_shape_selector"
                android:gravity="center"
                android:text="回复"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_14" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>