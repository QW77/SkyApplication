<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_color_white"
    android:orientation="vertical">


    <!--<include layout="@layout/app_ask_header" />-->


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    android:background="@color/main_colorPrimary">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:src="@mipmap/app_3" />

    <ImageView
    android:id="@+id/ask_show"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="25dp"
    android:src="@mipmap/app_6" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/aliwx_white"
            app:tabIndicatorColor="@color/dark_blue"
            app:tabMode="scrollable"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"
            app:tabSelectedTextColor="@color/dark_blue"
            app:tabTextColor="@color/aliwx_color_gray_01" />

        <View style="@style/grey_horizontal_line" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_ask"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>